<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email, "Name (case sensitive!)" %><br />
    <%= f.text_field :email, required: true, pattern: '([A-Za-z0-9]*)' %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :usertype %><br/>
	<select id="user_usertype" name="user[usertype]">
		<option value="user">user</option>
		<option value="admin">admin</option>
	</select>
  </div>
  <div class="actions"><%= f.submit "Sign Up" %></div>
<% end %>
<%= link_to 'Back', home_path %>